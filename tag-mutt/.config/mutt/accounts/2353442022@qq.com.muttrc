# vim: filetype=neomuttrc
# muttrc file for account 2353442022@qq.com
set realname = "2353442022"
set from = "2353442022@qq.com"
set sendmail = "msmtp -a 2353442022@qq.com"
alias me 2353442022 <2353442022@qq.com>
set folder = "/home/se7en/.local/share/mail/2353442022@qq.com"
set header_cache = /home/se7en/.cache/mutt-wizard/2353442022@qq.com/headers
set message_cachedir = /home/se7en/.cache/mutt-wizard/2353442022@qq.com/bodies
set mbox_type = Maildir
set hostname = "qq.com"
source /home/se7en/.config/mutt/switch.muttrc
set spoolfile = +INBOX
set postponed = +Drafts
set trash = "+Deleted Messages"
